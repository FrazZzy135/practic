using System;
class Book
{
    public string title; 
    public int pages;    

    public string Title { get; set; }
    public int Pages { get; set; }  

    public Book(string title, int pages)
    {
        Title = title;
        Pages = pages;
    }

    public Book(string title) : this(title, 100)
    {
    }

    public Book() : this("Без названия", 1)
    {
    }

    public void Read()
    {
        Console.WriteLine($"Читаю книгу \"{Title}\", {Pages} стр.");
    }
}


namespace ConsoleApp14
{
    internal class Program
    {
        static void Main()
        {
            {
                Book book1 = new Book("Осень и мир", 1200);
                Book book2 = new Book("1984", 100);
                Book book3 = new Book();

                book1.Read();
                book2.Read();
                book3.Read();

                Console.WriteLine("Страниц может быть от 1 до 5000!");
            }
        }
    }
    }
